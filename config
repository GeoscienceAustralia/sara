## resto/itag configuration

# CentOS 6 comes with PHP 5.3.3 - bcrypt cannot be used :(
USE_BCRYPT=NO

PASSPHRASE=thisisapassphrase
UPLOAD_DIRECTORY=/tmp/resto_uploads
GAUSS_DB_NAME=gauss
GAUSS_DB_SCHEMA_NAME=resto
DB_SUPERUSER=postgres
RESTO_USER=resto
RESTO_PASSWORD=resto
RESTO_ADMIN_USER=admin
RESTO_ADMIN_PASSWORD=admin
ITAG_DIR=/tmp/itag
ITAG_USER=itag
ITAG_PASSWORD=itag

MAPSERVER_URL=https://maps.snapplanet.io
MAPFILES_DIR=/home/maps/tmp.mapfiles
MAPFILES_DISPLAY_DIR=/data/tmp.mapfiles

CLIENT_ENDPOINT_RESET_PASSWORD=http://localhost/#/resetPassword
CLIENT_ENDPOINT_HTML_SEARCH_URL=http://localhost/#/search
